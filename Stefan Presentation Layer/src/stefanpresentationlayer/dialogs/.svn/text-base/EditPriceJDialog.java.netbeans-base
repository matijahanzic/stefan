    /** Creates new form NewPriceJDialog */
    public EditPriceJDialog(java.awt.Frame parent, boolean modal) {
        super(parent, modal);
        initComponents();
        setTitle("Promjena Cijene");
        MaterialManager manager = new MaterialManager();
        materialDetails = manager.GetAllMaterialDetails();
        calculationForms = manager.GetAllCalculationForms();
        this.firePropertyChange("calculationForms", null, null);
        this.firePropertyChange("materialDetails", null, null);
    }
    
    public EditPriceJDialog(java.awt.Frame parent, boolean modal,int materialId){
        super(parent, modal);
        initComponents();
        setTitle("Promjena Cijene");
        MaterialManager manager = new MaterialManager();
        materialDetails = manager.GetAllMaterialDetails();
        calculationForms = manager.GetAllCalculationForms();
        this.firePropertyChange("calculationForms", null, null);
        this.firePropertyChange("materialDetails", null, null);
        selectedMaterial = manager.GetMaterialById(materialId);
        FillData();
    }
    

